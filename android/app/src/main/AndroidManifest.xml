<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.toon_nation_814">

    <!-- The INTERNET permission is required to load the web app. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.google.android.apps.trustedwebactivity.LauncherActivity"
            android:label="@string/app_name"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!--
              This intent-filter allows the app to handle URLs from the specified domain.
              This is critical for verification of the Digital Asset Links.
              IMPORTANT: Replace `toon-nation-814.example.com` with your actual domain.
            -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https" android:host="toon-nation-814.example.com" />
            </intent-filter>

            <!-- This meta-data tag is used to specify the URL that the TWA should display. -->
            <meta-data
                android:name="android.support.customtabs.trusted.DEFAULT_URL"
                android:value="https://toon-nation-814.example.com" />

            <!-- This meta-data tag is used to customize the color of the status bar. -->
            <meta-data
                android:name="android.support.customtabs.trusted.STATUS_BAR_COLOR"
                android:resource="@color/status_bar_color" />
                
            <!-- This meta-data tag is used to set the navigation bar color. -->
            <meta-data
                android:name="android.support.customtabs.trusted.NAVIGATION_BAR_COLOR"
                android:resource="@color/navigation_bar_color" />

            <!--
              This meta-data tag specifies the provider authority for the Digital Asset Links file.
              It must be `${applicationId}.assetlinks`.
            -->
            <meta-data
                android:name="asset_statements"
                android:resource="@string/asset_statements" />
        </activity>

        <!-- Fallback activity for when Chrome is not installed or not updated. -->
        <activity
            android:name="com.google.android.apps.trustedwebactivity.WebViewFallbackActivity"
            android:label="@string/app_name"
            android:exported="false">
            <meta-data
                android:name="android.support.customtabs.trusted.FALLBACK_STRATEGY"
                android:value="webview" />
        </activity>
    </application>
</manifest>